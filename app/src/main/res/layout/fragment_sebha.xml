<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.SebhaFragment"
    android:background="@drawable/defaultbackground">

    <ImageView
        android:id="@+id/sebhalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sebhalogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tasbihtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/sebhalogo"
        app:layout_constraintStart_toStartOf="@id/sebhalogo"
        app:layout_constraintEnd_toEndOf="@id/sebhalogo"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/counterbutton"
        />
    <Button
        android:id="@+id/counterbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tasbihtv"
        app:layout_constraintStart_toStartOf="@id/tasbihtv"
        app:layout_constraintEnd_toEndOf="@id/tasbihtv"
        android:layout_margin="10dp"
        android:textSize="30sp"
        tools:text="1"
        app:layout_constraintBottom_toTopOf="@id/zekrbutton"

        />

    <Button
        android:id="@+id/zekrbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/sebhalogo"
        app:layout_constraintStart_toStartOf="@id/sebhalogo"
        app:layout_constraintTop_toBottomOf="@id/counterbutton"
        tools:text="لا حول ولا قوة الا بالله" />


</androidx.constraintlayout.widget.ConstraintLayout>